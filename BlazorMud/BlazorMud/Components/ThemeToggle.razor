@inherits LayoutComponentBase

<MudToggleIconButton 
    Toggled="@IsDarkTheme"
    Icon="@Icons.Material.Filled.DarkMode"
    Color="Color.Surface"
    ToggledChanged="ThemeToggled"
    ToggledIcon="@Icons.Material.Filled.LightMode"/>

@code {
    private bool IsDarkTheme { get; set; } = true;
    
    [Parameter]
    public EventCallback<bool> OnThemeToggled { get; set; }

    private async Task ThemeToggled(bool isDarkTheme)
    {
        IsDarkTheme = !IsDarkTheme;
        await OnThemeToggled.InvokeAsync(isDarkTheme);
    }
}