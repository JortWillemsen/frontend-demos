@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@IsDarkTheme" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">BlazorMud</MudText>
        <MudSpacer />
        <ThemeToggle  OnThemeToggled="ThemeToggled" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool IsDarkTheme { get; set; }

    private void ThemeToggled(bool isDarktheme)
    {
        IsDarkTheme = isDarktheme;
    }
}
