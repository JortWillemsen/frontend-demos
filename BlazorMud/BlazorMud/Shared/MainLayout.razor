@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@IsDarkTheme" />

<MudLayout>
    <MudAppBar Elevation="2">
        <MudText Typo="Typo.h5" Class="ml-3">BlazorMud</MudText>
        <MudSpacer/>
        <ThemeToggle OnThemeToggled="ThemeToggled"/>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
    <NavigationDrawer/>
</MudLayout>

@code {
    private bool IsDarkTheme { get; set; } = true;

    private void ThemeToggled(bool isDarktheme)
    {
        IsDarkTheme = isDarktheme;
    }
}
